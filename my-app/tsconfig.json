{
    "compilerOptions": {
        "target": "es2015",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "types": [
            "node",
            "react",
            "react-dom"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "src",
        "paths": {
            "@/components/shared/*": ["components/shared/*"],
            "@/components/*": ["components/*"],
            "@/lib/*": ["lib/*"],
            "@/features/*": ["features/*"],
            "@/routes/*": ["routes/*"],
            "@/pages/*": ["pages/*"],
            "@/config/*": ["config/*"],
            "@/contexts/*": ["contexts/*"],
            "@/data/*": ["data/*"],
            "@/hooks/*": ["hooks/*"],
            "@/utils/*": ["utils/*"],
            "@/types/*": ["types/*"]
        }
    },
    "include": [
        "src"
    ]
}